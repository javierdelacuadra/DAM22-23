<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="NewspapersDB">
        <class>servicios.modelo.hibernate.ClientsEntity</class>
        <class>servicios.modelo.hibernate.ItemsEntity</class>
        <class>servicios.modelo.hibernate.PurchasesEntity</class>
        <class>servicios.modelo.hibernate.PurchasesItemsEntity</class>

        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:mysql://localhost:3306/DockerTest"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="thewitcher"/>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/DockerTest"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.cj.jdbc.Driver"/>
            <property name="hibernate.connection.username" value="root"/>
            <property name="hibernate.connection.password" value="thewitcher"/>
        </properties>

    </persistence-unit>

</persistence>