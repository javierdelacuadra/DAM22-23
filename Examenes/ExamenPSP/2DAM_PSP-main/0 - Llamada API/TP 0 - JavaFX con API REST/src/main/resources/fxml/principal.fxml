<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuItem?>
<BorderPane fx:id="root" prefHeight="100.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/18"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.pantallas.principal.PrincipalController">
    <center>
        <StackPane prefHeight="150.0" prefWidth="200.0">
            <AnchorPane BorderPane.alignment="CENTER">
                <Text fill="#00a6ff" layoutX="281.0" layoutY="65.0" strokeType="OUTSIDE" strokeWidth="0.0"
                      text="¡Ciudades del mundo!" wrappingWidth="397.13671875">
                    <font>
                        <Font name="Roboto Black" size="38.0"/>
                    </font>
                </Text>
                <MFXButton fx:id="btnComenzar" layoutX="452.0" layoutY="111.0" mnemonicParsing="false"
                           onAction="#comenzar" text="Comenzar">
                    <font>
                        <Font name="Alef Regular" size="12.0"/>
                    </font>
                </MFXButton>
                <StackPane prefHeight="150.0" prefWidth="200.0"/>
            </AnchorPane>
        </StackPane>
    </center>
    <top>
        <MenuBar fx:id="menuPrincipal">
            <Menu mnemonicParsing="false" text="Menu">
                <!--Los objetos tienen id pero no están en el controller ya que necesitamos el id para hacer el cambio de pantalla-->
                <MenuItem fx:id="menuItemListCity" mnemonicParsing="false" onAction="#menuClick"
                          text="Listar Ciudades"/>
                <MenuItem fx:id="menuItemDetallePais" mnemonicParsing="false" onAction="#menuClick"
                          text="Detalle País"/>
                <MenuItem fx:id="menuItemExit" mnemonicParsing="false" onAction="#exit" text="Exit"/>
            </Menu>
        </MenuBar>
    </top>
</BorderPane>
